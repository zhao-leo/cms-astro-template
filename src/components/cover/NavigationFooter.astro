---
// 页脚导航链接组件
const fast_link = [
    { name: "关于我们", href: "#" },
    { name: "网站申明", href: "#" },
    { name: "友情链接", href: "#" },
];

const hot_classify = [
    { name: "家居家电", href: "/categories/hlw/1" },
    { name: "手机数码", href: "/categories/rw/1" },
    { name: "IT互联网", href: "/categories/sj/1" },
];
---

<!-- 快速链接 -->
<div class="col-span-1">
    <h4 class="text-lg font-semibold mb-4 text-indigo-300">快速链接</h4>
    <ul class="space-y-3">
        {
            fast_link.map((item) => (
                <li>
                    <a
                        href={item.href}
                        class="text-gray-400 hover:text-white transition-colors"
                    >
                        {item.name}
                    </a>
                </li>
            ))
        }
    </ul>
</div>

<!-- 分类链接 -->
<div class="col-span-1">
    <h4 class="text-lg font-semibold mb-4 text-indigo-300">热门分类</h4>
    <ul class="space-y-3">
        {
            hot_classify.map((item) => (
                <li>
                    <a
                        href={item.href}
                        class="text-gray-400 hover:text-white transition-colors"
                    >
                        {item.name}
                    </a>
                </li>
            ))
        }
    </ul>
</div>

<!-- 联系信息 -->
<div class="col-span-1 lg:col-span-1">
    <h4 class="text-lg font-semibold mb-4 text-indigo-300">联系我们</h4>
    <ul class="space-y-3 text-gray-400">
        <li class="flex items-start">
            <i class="fas fa-envelope mt-1 mr-3 text-indigo-400"></i>
            <span><a href="mailto:BD@example.com">BD@example.com</a></span>
        </li>
        <li class="flex items-start">
            <i class="fab fa-qq mt-1 mr-3 text-indigo-400"></i>
            <span>QQ: 611495XX</span>
        </li>
    </ul>
</div>
