---
// src/components/Category.astro

// 这里使用Astro.props来定义组件参数
// 在实际的Astro组件中，参数应该在前面的frontmatter部分定义
// 这里仅用于演示目的
const { category, categoryName } = Astro.props || {
    category: "hlw",
    categoryName: "家居家电",
};

const allPosts = Object.values(
    import.meta.glob("../pages/post/*.md", { eager: true }),
);

// 筛选出指定分类的文章
const categoryPosts = allPosts
    .filter((post) => {
        const categories = post.frontmatter.categories || [];
        return categories.includes(category);
    })
    // 按日期排序（最新的在前）
    .sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date))
    // 取最新的9篇
    .slice(0, 9);

// 获取最新的一篇文章
const latestPost = categoryPosts.length > 0 ? categoryPosts[0] : null;
// 其余文章
const otherPosts = categoryPosts.length > 1 ? categoryPosts.slice(1) : [];

// 截取简介到50字
function truncateText(text, maxLength = 50) {
    if (!text) return "暂无简介...";
    return text.length > maxLength
        ? text.substring(0, maxLength) + "..."
        : text;
}
---

<div
    class="category-posts-container bg-white rounded-lg shadow-sm border border-gray-200"
>
    <!-- 分类标题区域 -->
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h2 class="text-xl font-bold text-gray-800">{categoryName}</h2>
            <a
                href={`/categories/${category}`}
                class="text-blue-600 hover:text-blue-800 text-sm font-medium"
            >
                查看全部 →
            </a>
        </div>
    </div>

    <!-- 文章列表区域 -->
    <div class="p-6">
        {
            categoryPosts.length === 0 ? (
                <div class="text-center py-8">
                    <p class="text-gray-500">暂无{categoryName}相关文章</p>
                </div>
            ) : (
                <div class="space-y-4">
                    {/* 最新文章（第一篇） */}
                    {latestPost && (
                        <div class="border-b border-gray-200 pb-6 mb-6">
                            <div class="flex gap-4">
                                {/* 图片区域 */}
                                <div class="flex-shrink-0">
                                    <div class="w-24 h-24 bg-gray-200 rounded-lg overflow-hidden flex items-center justify-center">
                                        {latestPost.frontmatter.image ? (
                                            <img
                                                src={
                                                    latestPost.frontmatter.image
                                                }
                                                alt={
                                                    latestPost.frontmatter.title
                                                }
                                                class="w-full h-full object-cover"
                                            />
                                        ) : (
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                class="h-8 w-8 text-gray-400"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                />
                                            </svg>
                                        )}
                                    </div>
                                </div>

                                {/* 内容区域 */}
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-2 hover:text-blue-600">
                                        <a href={latestPost.url}>
                                            {latestPost.frontmatter.title}
                                        </a>
                                    </h3>
                                    <p class="text-gray-600 text-sm mb-2">
                                        {truncateText(
                                            latestPost.frontmatter.description,
                                        )}
                                    </p>
                                    <span class="text-xs text-gray-500">
                                        {new Date(
                                            latestPost.frontmatter.date,
                                        ).toLocaleDateString("zh-CN")}
                                    </span>
                                </div>
                            </div>
                        </div>
                    )}

                    {/* 其他文章（2-9篇，只显示标题） */}
                    {otherPosts.length > 0 && (
                        <div class="space-y-3">
                            {otherPosts.map((post, index) => (
                                <div class="flex items-center justify-between py-2 hover:bg-gray-50 rounded px-2 -mx-2">
                                    <h4 class="text-gray-800 hover:text-blue-600 transition-colors flex-1">
                                        <a href={post.url} class="block">
                                            {post.frontmatter.title}
                                        </a>
                                    </h4>
                                    <span class="text-xs text-gray-400 ml-4 flex-shrink-0">
                                        {new Date(
                                            post.frontmatter.date,
                                        ).toLocaleDateString("zh-CN")}
                                    </span>
                                </div>
                            ))}
                        </div>
                    )}
                </div>
            )
        }
    </div>
</div>

<style>
    .category-posts-container {
        font-family: "Inter", ui-sans-serif, system-ui, sans-serif;
    }
</style>
