---
// src/components/PostList.astro
// 文章列表组件

export interface Props {
    posts: any[];
    showCategory?: boolean;
    showTags?: boolean;
}

const { posts, showCategory = true, showTags = true } = Astro.props;

// 截取简介到指定长度
function truncateText(text: string, maxLength = 100) {
    if (!text) return "暂无简介...";
    return text.length > maxLength
        ? text.substring(0, maxLength) + "..."
        : text;
}

// 格式化日期
function formatDate(date: string | Date) {
    return new Date(date).toLocaleDateString('zh-CN', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
}
---

<div class="post-list space-y-6">
    {posts.length > 0 ? (
        posts.map((post) => (
            <article class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-300 group">
                <div class="flex flex-col md:flex-row">
                    <!-- 图片区域 -->
                    {post.frontmatter.image && (
                        <div class="md:w-48 md:flex-shrink-0">
                            <div class="h-48 md:h-full overflow-hidden">
                                <img
                                    src={post.frontmatter.image}
                                    alt={post.frontmatter.title}
                                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                />
                            </div>
                        </div>
                    )}

                    <!-- 内容区域 -->
                    <div class="flex-1 p-6">
                        <!-- 标题 -->
                        <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-indigo-600 transition-colors">
                            <a href={post.url} class="block">
                                {post.frontmatter.title}
                            </a>
                        </h2>

                        <!-- 简介 -->
                        <p class="text-gray-600 mb-4 leading-relaxed">
                            {truncateText(post.frontmatter.description)}
                        </p>

                        <!-- 元信息区域 -->
                        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 mb-4">
                            <!-- 原创标签 -->
                            {post.frontmatter.origin && (
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                    </svg>
                                    原创
                                </span>
                            )}

                            <!-- 发布时间 -->
                            <span class="flex items-center">
                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                {formatDate(post.frontmatter.date)}
                            </span>

                            <!-- 作者 -->
                            {post.frontmatter.author && (
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    {post.frontmatter.author}
                                </span>
                            )}

                            <!-- 来源 -->
                            {post.frontmatter.source && (
                                <span class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                                    </svg>
                                    {post.frontmatter.source}
                                </span>
                            )}
                        </div>

                        <!-- 分类和标签 -->
                        <div class="flex flex-wrap items-center gap-2">
                            <!-- 分类 -->
                            {showCategory && post.frontmatter.categories && post.frontmatter.categories.length > 0 && (
                                <div class="flex items-center gap-2">
                                    <span class="text-xs text-gray-400">分类：</span>
                                    {post.frontmatter.categories.map((category: string) => (
                                        <a
                                            href={`/categories/${category}/1`}
                                            class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors"
                                        >
                                            {category}
                                        </a>
                                    ))}
                                </div>
                            )}

                            <!-- 标签 -->
                            {showTags && post.frontmatter.tags && post.frontmatter.tags.length > 0 && (
                                <div class="flex items-center gap-2 flex-wrap">
                                    <span class="text-xs text-gray-400">标签：</span>
                                    {post.frontmatter.tags.slice(0, 3).map((tag: string) => (
                                        <a
                                            href={`/tags/${encodeURIComponent(tag)}/1`}
                                            class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
                                        >
                                            #{tag}
                                        </a>
                                    ))}
                                    {post.frontmatter.tags.length > 3 && (
                                        <span class="text-xs text-gray-400">
                                            +{post.frontmatter.tags.length - 3} 更多
                                        </span>
                                    )}
                                </div>
                            )}
                        </div>
                    </div>
                </div>

                <!-- 阅读更多链接 -->
                <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
                    <a
                        href={post.url}
                        class="inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-700 transition-colors"
                    >
                        阅读全文
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </article>
        ))
    ) : (
        <div class="text-center py-16">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-10">
                <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-6">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>

                <h3 class="text-2xl font-semibold text-gray-900 mb-3">暂无文章</h3>
                <p class="text-gray-600 mb-6 max-w-md mx-auto leading-relaxed">
                    当前分类或标签下还没有发布任何文章。请稍后回来查看最新内容，或者浏览其他分类。
                </p>

                <div class="flex flex-col sm:flex-row gap-3 justify-center items-center">
                    <a
                        href="/"
                        class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium"
                    >
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m0 0h4m0 0h3a1 1 0 001-1V10M9 21h6"></path>
                        </svg>
                        返回首页
                    </a>
                    <a
                        href="/categories"
                        class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium"
                    >
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        浏览分类
                    </a>
                </div>
            </div>
        </div>
    )}
</div>

<style>
    .post-list {
        font-family: 'Inter', ui-sans-serif, system-ui, sans-serif;
    }

    .post-list article {
        transition: all 0.3s ease;
    }

    .post-list article:hover {
        transform: translateY(-2px);
    }

    /* 确保图片容器有合适的宽高比 */
    .post-list img {
        aspect-ratio: 16/9;
        object-fit: cover;
    }

    /* 移动端优化 */
    @media (max-width: 768px) {
        .post-list article .flex {
            flex-direction: column;
        }

        .post-list .md\:w-48 {
            width: 100%;
        }

        .post-list .h-48 {
            height: 200px;
        }
    }
</style>
