---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} useNav={true}>
    <div class="container mx-auto px-4 py-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Markdown 内容部分 - 占据大部分空间 -->
            <div class="lg:col-span-3">
                <article class="prose prose-lg max-w-none">
                    <!-- 文章标题 -->
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">
                        {frontmatter.title}
                    </h1>

                    <!-- 文章描述 -->
                    <!-- {
                        frontmatter.description && (
                            <p class="text-xl text-gray-600 italic mb-6">
                                {frontmatter.description}
                            </p>
                        )
                    } -->

                    <!-- 元信息区域 -->
                    <div
                        class="flex flex-wrap items-center gap-4 mb-6 text-sm text-gray-500 border-b border-gray-200 pb-4"
                    >
                        <!-- 原创标签 -->
                        {
                            frontmatter.origin && (
                                <span class="bg-red-500 text-white px-2 py-1 rounded text-xs font-medium">
                                    原创
                                </span>
                            )
                        }

                        <!-- 发布时间 -->
                        {
                            frontmatter.date && (
                                <span class="flex items-center">
                                    <i class="fas fa-calendar-alt mr-1" />
                                    {frontmatter.date.toString().slice(0, 10)}
                                </span>
                            )
                        }

                        <!-- 来源信息 -->
                        {
                            frontmatter.source && (
                                <span class="flex items-center">
                                    <i class="fas fa-link mr-1" />
                                    来源：{frontmatter.source}
                                </span>
                            )
                        }

                        <!-- 作者信息 -->
                        {
                            frontmatter.author && (
                                <span class="flex items-center">
                                    <i class="fas fa-user mr-1" />
                                    作者：{frontmatter.author}
                                </span>
                            )
                        }
                    </div>

                    <!-- 特色图片 -->
                    {
                        frontmatter.image && (
                            <div class="mb-8">
                                <img
                                    src={frontmatter.image.url}
                                    alt={frontmatter.image.alt}
                                    class="w-full h-auto rounded-lg shadow-md"
                                />
                            </div>
                        )
                    }

                    <!-- 标签 -->
                    {
                        frontmatter.tags && frontmatter.tags.length > 0 && (
                            <div class="tags mb-8">
                                {frontmatter.tags.map((tag: string) => (
                                    <a href={`/tags/${tag}`} class="tag">
                                        #{tag}
                                    </a>
                                ))}
                            </div>
                        )
                    }

                    <!-- Markdown 内容 -->
                    <div class="markdown-content">
                        <slot />
                    </div>
                </article>
            </div>

            <!-- 信息侧边栏 - 只在桌面端显示 -->
            <div class="hidden lg:block lg:col-span-1">
                <div class="sticky top-24">
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">
                            文章信息
                        </h3>
                        <!-- 这里暂时空着，后续可以添加相关文章、目录等内容 -->
                        <p class="text-gray-500 text-sm">侧边栏内容待添加...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        display: inline-block;
        padding: 0.375rem 0.75rem;
        background-color: #f3f4f6;
        color: #374151;
        text-decoration: none;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s ease-in-out;
        border: 1px solid #e5e7eb;
    }

    .tag:hover {
        background-color: #e5e7eb;
        color: #1f2937;
        transform: translateY(-1px);
    }

    .markdown-content {
        line-height: 1.8;
    }

    .markdown-content h1,
    .markdown-content h2,
    .markdown-content h3,
    .markdown-content h4,
    .markdown-content h5,
    .markdown-content h6 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
        color: #1f2937;
    }

    .markdown-content p {
        margin-bottom: 1.5rem;
        color: #374151;
    }

    .markdown-content pre {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        padding: 1rem;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    .markdown-content code {
        background-color: #f1f5f9;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
        color: #dc2626;
    }

    .markdown-content blockquote {
        border-left: 4px solid #6366f1;
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #6b7280;
    }

    .markdown-content ul,
    .markdown-content ol {
        margin: 1.5rem 0;
        padding-left: 1.5rem;
    }

    .markdown-content li {
        margin-bottom: 0.5rem;
    }
</style>
