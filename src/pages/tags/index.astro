---
// src/pages/tags/index.astro
// 标签总览页面

import BaseLayout from "../../layouts/BaseLayout.astro";
import TagsCloud from "../../components/TagsCloud.astro";

const allPosts = Object.values(
    import.meta.glob("../post/*.md", { eager: true }),
);

// 提取所有标签并统计
const allTags = allPosts.map((post) => post.frontmatter.tags || []).flat();
const tagFrequency = {};
allTags.forEach((tag) => {
    tagFrequency[tag] = (tagFrequency[tag] || 0) + 1;
});

// 按频率排序标签
const sortedTags = [...new Set(allTags)].sort((a, b) => {
    return tagFrequency[b] - tagFrequency[a];
});

const pageTitle = "所有标签 - XXXX";
---

<BaseLayout pageTitle={pageTitle} useNav={true}>
    <div class="container mx-auto px-4 py-8">
        <!-- 页面标题 -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                文章标签
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                浏览所有标签，发现感兴趣的内容。标签按热门程度排序，点击任意标签查看相关文章。
            </p>
            <div class="mt-6">
                <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                    共 {sortedTags.length} 个标签
                </span>
            </div>
        </div>

        <!-- 标签云 -->
        <div class="max-w-6xl mx-auto mb-12">
            <TagsCloud maxlength={100} />
        </div>

        <!-- 详细标签列表 -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-blue-50 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-800 flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 173 12V7a4 4 0 014-4z"></path>
                        </svg>
                        标签详情列表
                    </h2>
                </div>

                <div class="divide-y divide-gray-100">
                    {sortedTags.map((tag, index) => {
                        const frequency = tagFrequency[tag];
                        const percentage = Math.round((frequency / allPosts.length) * 100);

                        return (
                            <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <span class="flex-shrink-0 w-8 h-8 bg-indigo-100 text-indigo-600 rounded-full flex items-center justify-center text-sm font-medium mr-4">
                                            {index + 1}
                                        </span>
                                        <div>
                                            <a
                                                href={`/tags/${encodeURIComponent(tag)}/1`}
                                                class="text-lg font-semibold text-gray-900 hover:text-indigo-600 transition-colors"
                                            >
                                                {tag}
                                            </a>
                                            <p class="text-sm text-gray-500">
                                                {frequency} 篇文章 • 占总文章的 {percentage}%
                                            </p>
                                        </div>
                                    </div>

                                    <div class="flex items-center space-x-3">
                                        <!-- 热度指示器 -->
                                        <div class="flex items-center">
                                            <div class="w-24 bg-gray-200 rounded-full h-2">
                                                <div
                                                    class="bg-indigo-600 h-2 rounded-full transition-all duration-300"
                                                    style={`width: ${Math.min(100, (frequency / Math.max(...Object.values(tagFrequency))) * 100)}%`}
                                                ></div>
                                            </div>
                                            <span class="ml-2 text-xs text-gray-500 w-8 text-right">
                                                {frequency}
                                            </span>
                                        </div>

                                        <!-- 查看按钮 -->
                                        <a
                                            href={`/tags/${encodeURIComponent(tag)}/1`}
                                            class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-indigo-100 text-indigo-700 hover:bg-indigo-200 transition-colors"
                                        >
                                            查看文章
                                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        );
                    })}
                </div>
            </div>
        </div>

        <!-- 面包屑导航 -->
        <div class="mt-8">
            <nav class="flex justify-center" aria-label="面包屑">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600">
                            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                            首页
                        </a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">标签</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</BaseLayout>

<style>
    .container {
        font-family: 'Inter', ui-sans-serif, system-ui, sans-serif;
        max-width: 1400px;
    }

    /* 标签热度动画 */
    .hover\:bg-gray-50:hover .bg-indigo-600 {
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: .8;
        }
    }

    /* 移动端优化 */
    @media (max-width: 768px) {
        .container {
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .flex.items-center.justify-between {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .flex.items-center.space-x-3 {
            width: 100%;
            justify-content: space-between;
        }
    }
</style>
